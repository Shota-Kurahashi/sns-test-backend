generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("HEROKU_POSTGRESQL_ORANGE_URL")
  
}

model User {
  email  String  @unique
  name   String?
  userId String  @id @unique @default(uuid())
  Posts  Post[]
}

model Post {
  id       String  @id @unique @default(uuid())
  title    String
  content  String?
    body     String?
  authorId String
  author   User    @relation(fields: [authorId], references: [userId])
}
